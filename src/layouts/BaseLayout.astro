---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  faqItems?: Array<{ question: string; answer: string }>;
}

const {
  title,
  description = 'LeadFair is an AI-powered CRM and business management platform for small businesses. Lead pipeline, AI receptionist, automations, visibility optimization, customizable dashboard, and a company companion AI — all in one platform.',
  ogImage = '/og-default.png',
  faqItems = []
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site)} />

    <meta name="generator" content={Astro.generator} />

    <!-- Structured Data - Organization -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "LeadFair",
      "url": "https://leadfair.ai",
      "description": "LeadFair is an AI-powered CRM and business management platform for small businesses. One platform with a lead pipeline, AI receptionist, automations, visibility optimization, customizable dashboard, and a company companion AI.",
      "founder": {
        "@type": "Person",
        "name": "Jeremy Turner"
      },
      "foundingLocation": {
        "@type": "Place",
        "name": "Huntsville, Alabama"
      },
      "knowsAbout": ["AI CRM", "AI Business Management", "AI Receptionist", "Business Automation", "Lead Management", "Search Engine Optimization", "AI Visibility", "Small Business Software"]
    })} />

    <!-- Structured Data - SoftwareApplication -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "LeadFair",
      "applicationCategory": "BusinessApplication",
      "operatingSystem": "Web",
      "description": "AI-powered CRM and business management platform. Includes lead pipeline, customizable dashboard, AI receptionist for 24/7 call answering, automated follow-ups, visibility optimization for Google and AI search, and a company companion AI for team knowledge.",
      "url": "https://leadfair.ai",
      "offers": {
        "@type": "AggregateOffer",
        "lowPrice": "199",
        "highPrice": "599",
        "priceCurrency": "USD",
        "offerCount": "3"
      },
      "featureList": ["CRM & Lead Pipeline", "Customizable Dashboard", "AI Receptionist", "Business Automations", "Visibility Optimization", "Company Companion AI", "24/7 Call Answering", "Call History & Summaries", "Activity Feed"]
    })} />

    {faqItems.length > 0 && (
      <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": faqItems.map(item => ({
          "@type": "Question",
          "name": item.question,
          "acceptedAnswer": {
            "@type": "Answer",
            "text": item.answer
          }
        }))
      })} />
    )}

    <!-- Preload Inter font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />

    <script>
      // Scroll reveal — fade elements in as they enter the viewport
      function initReveal() {
        // Target sections (skip the first/hero section) and key content blocks
        const sections = document.querySelectorAll('main > section, main > div > section, main > slot > section');
        const allSections = Array.from(document.querySelectorAll('section'));

        // Apply reveal to all sections except the first one (hero)
        allSections.forEach((section, i) => {
          if (i === 0) return; // skip hero
          section.classList.add('reveal');

          // Find grid children and stagger them
          const grid = section.querySelector('.grid');
          if (grid) {
            grid.classList.add('reveal-stagger');
            Array.from(grid.children).forEach((child, j) => {
              child.classList.add('reveal');
              (child as HTMLElement).style.setProperty('--reveal-index', String(j));
            });
          }
        });

        // Observe and reveal
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry) => {
              if (entry.isIntersecting) {
                entry.target.classList.add('revealed');
                observer.unobserve(entry.target);
              }
            });
          },
          { threshold: 0.1, rootMargin: '0px 0px -50px 0px' }
        );

        document.querySelectorAll('.reveal').forEach((el) => observer.observe(el));
      }

      // Run on page load and on Astro page transitions
      initReveal();
      document.addEventListener('astro:page-load', initReveal);
    </script>
  </body>
</html>
