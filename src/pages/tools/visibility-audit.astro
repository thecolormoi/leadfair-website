---
import BaseLayout from '../../layouts/BaseLayout.astro';
import VisibilityAudit from '../../components/visibility-audit/VisibilityAudit';
---

<BaseLayout
  title="Free Visibility Audit â€” LeadFair"
  description="See how visible your business is on Google, in AI search results, and in your local area. Free audit with specific recommendations."
>
  <section class="relative overflow-hidden bg-dark text-white">
    <div class="absolute inset-0 bg-grid-dark opacity-20"></div>
    <div class="blob blob-green w-96 h-96 -top-32 -right-32 opacity-10"></div>
    <div class="blob blob-blue w-64 h-64 bottom-0 left-10 opacity-10"></div>

    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <VisibilityAudit client:load />
    </div>
  </section>

  <!-- Hidden form for Netlify Forms detection at build time -->
  <form name="visibility-audit-results" data-netlify="true" netlify-honeypot="bot-field" hidden>
    <input name="form-name" value="visibility-audit-results" />
    <input name="bot-field" />
    <input name="name" />
    <input name="email" />
    <input name="phone" />
    <input name="business-name" />
    <input name="website-url" />
    <input name="city" />
    <input name="industry" />
    <input name="overall-score" />
    <input name="overall-grade" />
    <input name="score-search-visibility" />
    <input name="grade-search-visibility" />
    <input name="score-ai-visibility" />
    <input name="grade-ai-visibility" />
    <input name="score-local-presence" />
    <input name="grade-local-presence" />
    <input name="weak-areas" />
  </form>
</BaseLayout>
