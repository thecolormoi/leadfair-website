---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BusinessDiagnostic from '../../components/diagnostic/BusinessDiagnostic';
---

<BaseLayout
  title="Free Business Diagnostic â€” LeadFair"
  description="Find out where AI and better visibility could make the biggest difference for your business. Free 5-minute diagnostic with personalized recommendations."
>
  <section class="relative overflow-hidden bg-dark text-white">
    <div class="absolute inset-0 bg-grid-dark opacity-20"></div>
    <div class="blob blob-blue w-96 h-96 -top-32 -right-32 opacity-10"></div>
    <div class="blob blob-green w-64 h-64 bottom-0 left-10 opacity-10"></div>

    <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <BusinessDiagnostic client:load />
    </div>
  </section>

  <!-- Hidden form for Netlify Forms detection at build time -->
  <form name="diagnostic-results" data-netlify="true" netlify-honeypot="bot-field" hidden>
    <input name="form-name" value="diagnostic-results" />
    <input name="bot-field" />
    <input name="name" />
    <input name="email" />
    <input name="phone" />
    <input name="business-name" />
    <input name="industry" />
    <input name="team-size" />
    <input name="years" />
    <input name="challenge" />
    <input name="overall-score" />
    <input name="overall-grade" />
    <input name="score-lead-generation" />
    <input name="grade-lead-generation" />
    <input name="score-sales-conversion" />
    <input name="grade-sales-conversion" />
    <input name="score-customer-retention" />
    <input name="grade-customer-retention" />
    <input name="score-marketing-visibility" />
    <input name="grade-marketing-visibility" />
    <input name="score-operations" />
    <input name="grade-operations" />
  </form>
</BaseLayout>
