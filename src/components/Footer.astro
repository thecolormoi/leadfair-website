---
const currentYear = new Date().getFullYear();

const serviceLinks = [
  { href: '/services/ai-receptionist', label: 'AI Receptionist' },
  { href: '/services/company-companion', label: 'Company Companion' },
  { href: '/services/visibility', label: 'Visibility' },
  { href: '/services/automations', label: 'Automations' },
];

const companyLinks = [
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
  { href: '/contact', label: 'Contact' },
];

const toolLinks = [
  { href: '/tools/business-diagnostic', label: 'Business Diagnostic' },
  { href: '/tools/visibility-audit', label: 'Visibility Audit' },
];
---

<footer class="bg-dark text-gray-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-10">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href="/" class="flex items-center gap-2 font-bold text-xl text-white mb-4">
          <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
            <rect width="28" height="28" rx="6" fill="hsl(217 91% 45%)"/>
            <path d="M8 8h4v12H8V8zm8 4h4v8h-4v-8z" fill="white"/>
          </svg>
          LeadFair
        </a>
        <p class="text-sm text-gray-400 leading-relaxed">
          AI-powered systems that help small businesses grow smarter, get found, and save time.
        </p>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-white font-semibold text-sm mb-4">Services</h3>
        <ul class="space-y-2">
          {serviceLinks.map(link => (
            <li>
              <a href={link.href} class="text-sm text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-white font-semibold text-sm mb-4">Company</h3>
        <ul class="space-y-2">
          {companyLinks.map(link => (
            <li>
              <a href={link.href} class="text-sm text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Tools -->
      <div>
        <h3 class="text-white font-semibold text-sm mb-4">Free Tools</h3>
        <ul class="space-y-2">
          {toolLinks.map(link => (
            <li>
              <a href={link.href} class="text-sm text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-12 pt-8 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-sm text-gray-500">&copy; {currentYear} LeadFair. All rights reserved.</p>
      <p class="text-sm text-gray-500">Huntsville, Alabama</p>
    </div>
  </div>
</footer>
