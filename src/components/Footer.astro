---
const currentYear = new Date().getFullYear();

const serviceLinks = [
  { href: '/services/ai-receptionist', label: 'AI Receptionist' },
  { href: '/services/company-companion', label: 'Company Companion' },
  { href: '/services/visibility', label: 'Visibility' },
  { href: '/services/automations', label: 'Automations' },
];

const companyLinks = [
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
  { href: '/contact', label: 'Contact' },
  { href: '/privacy', label: 'Privacy Policy' },
];

const toolLinks = [
  { href: '/tools/business-diagnostic', label: 'Business Diagnostic' },
  { href: '/tools/visibility-audit', label: 'Visibility Audit' },
];
---

<footer class="bg-dark text-gray-300">
  <!-- Footer Links -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-10">
      <!-- Company -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4">Company</h3>
        <ul class="space-y-2">
          {companyLinks.map(link => (
            <li>
              <a href={link.href} class="text-sm text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4">Services</h3>
        <ul class="space-y-2">
          {serviceLinks.map(link => (
            <li>
              <a href={link.href} class="text-sm text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4">Resources</h3>
        <ul class="space-y-2">
          {toolLinks.map(link => (
            <li>
              <a href={link.href} class="text-sm text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4">Contact</h3>
        <ul class="space-y-2">
          <li>
            <a href="/contact" class="text-sm text-gray-400 hover:text-white transition-colors">
              Get in Touch
            </a>
          </li>
          <li class="text-sm text-gray-400">Huntsville, Alabama</li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 mt-12 pt-8 flex flex-col md:flex-row items-center justify-between gap-4">
      <div class="flex items-center gap-2.5">
        <div class="w-8 h-8 bg-white rounded-lg flex items-center justify-center">
          <span class="text-dark font-bold text-sm">LF</span>
        </div>
        <span class="font-bold text-white">LeadFair</span>
      </div>
      <p class="text-sm text-gray-500">&copy; {currentYear} LeadFair. All rights reserved.</p>
    </div>
  </div>
</footer>
