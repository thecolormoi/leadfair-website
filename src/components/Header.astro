---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/services/ai-receptionist', label: 'AI Receptionist' },
  { href: '/services/company-companion', label: 'Company Companion' },
  { href: '/services/visibility', label: 'Visibility' },
  { href: '/services/automations', label: 'Automations' },
];

const secondaryLinks = [
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
  { href: '/contact', label: 'Contact' },
];
---

<header class="bg-white/95 backdrop-blur-sm border-b border-gray-100 sticky top-0 z-50 shadow-sm">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2.5 font-bold text-xl text-text hover:text-primary-600 transition-colors">
        <div class="w-9 h-9 bg-primary-500 rounded-lg flex items-center justify-center">
          <span class="text-white font-bold text-sm">LF</span>
        </div>
        LeadFair
      </a>

      <!-- Desktop Nav -->
      <div class="hidden lg:flex items-center gap-1">
        <!-- Services Dropdown -->
        <div class="relative group">
          <button class="px-3 py-2 text-sm font-medium text-text-light hover:text-primary-500 transition-colors flex items-center gap-1">
            Services
            <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          <div class="absolute top-full left-0 w-56 bg-white rounded-lg shadow-lg border border-gray-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 pt-2">
            <div class="py-2">
              {navLinks.map(link => (
                <a
                  href={link.href}
                  class:list={[
                    'block px-4 py-2 text-sm hover:bg-primary-50 hover:text-primary-600 transition-colors',
                    currentPath.startsWith(link.href) ? 'text-primary-600 bg-primary-50' : 'text-text-light'
                  ]}
                >
                  {link.label}
                </a>
              ))}
            </div>
          </div>
        </div>

        {secondaryLinks.map(link => (
          <a
            href={link.href}
            class:list={[
              'px-3 py-2 text-sm font-medium transition-colors',
              currentPath.startsWith(link.href) ? 'text-primary-600' : 'text-text-light hover:text-primary-500'
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA -->
      <div class="hidden lg:flex items-center gap-3">
        <a
          href="/contact"
          class="bg-accent-500 text-white px-5 py-2.5 rounded-lg text-sm font-semibold hover:bg-accent-600 transition-all shadow-md hover:shadow-lg btn-scale"
        >
          Get Started
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-btn"
        class="lg:hidden p-2 text-text-light hover:text-primary-500 transition-colors"
        aria-label="Open menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Nav -->
    <div id="mobile-menu" class="lg:hidden hidden pb-4">
      <div class="space-y-1 pt-2">
        <p class="px-3 py-1 text-xs font-semibold text-text-lighter uppercase tracking-wider">Services</p>
        {navLinks.map(link => (
          <a
            href={link.href}
            class:list={[
              'block px-3 py-2 text-sm rounded-lg transition-colors',
              currentPath.startsWith(link.href) ? 'text-primary-600 bg-primary-50' : 'text-text-light hover:bg-gray-50'
            ]}
          >
            {link.label}
          </a>
        ))}
        <div class="border-t border-gray-100 my-2"></div>
        {secondaryLinks.map(link => (
          <a
            href={link.href}
            class:list={[
              'block px-3 py-2 text-sm rounded-lg transition-colors',
              currentPath.startsWith(link.href) ? 'text-primary-600 bg-primary-50' : 'text-text-light hover:bg-gray-50'
            ]}
          >
            {link.label}
          </a>
        ))}
        <div class="pt-2">
          <a
            href="/contact"
            class="block text-center bg-primary-500 text-white px-4 py-2 rounded-lg text-sm font-semibold hover:bg-primary-600 transition-colors"
          >
            Get Started
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
